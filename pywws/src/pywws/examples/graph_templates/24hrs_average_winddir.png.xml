<graph>
  <size>600, 400</size>
  <lmargin>7</lmargin>
  <rmargin>7</rmargin>
  <duration>hours=24</duration>
  <xtics>2</xtics>
  <xformat>%H%M</xformat>
  <dateformat></dateformat>
  <plot>
    <bmargin>1</bmargin>
    <title>Wind speed (mph)</title>
    <yrange>0, 35</yrange>
    <source>raw</source>
    <subplot>
      <colour>3</colour>
      <ycalc>wind_mph(data['wind_ave'])</ycalc>
      <title>average</title>
    </subplot>
    <subplot>
      <style>+ 1</style>
      <colour>4</colour>
      <ycalc>(None,wind_mph(data['wind_gust']))[data['wind_gust']-data['wind_ave']>1.0]</ycalc>
      <title>gust</title>
    </subplot>
  </plot>
  <plot>
    <title>Wind direction (°)</title>
    <yrange>0, 360</yrange>
    <ytics>45</ytics>
    <y2tics>('N' 0, 'E' 90, 'S' 180, 'W' 270, 'N' 360)</y2tics>
    <source>raw</source>
    <subplot>
      <style>+ 1</style>
      <colour>2</colour>
      <ycalc>winddir_average(source[data['idx']-timedelta(minutes=24):
	                            data['idx']+timedelta(minutes=24)],0.5,9)</ycalc>
    </subplot>
  </plot>
</graph>
